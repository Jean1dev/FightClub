<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="65">


            <TextView
                android:id="@+id/txtCodigoAluno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="50dp"
                android:editable="true"
                android:gravity="center"
                android:text="@string/codigoDoAluno"
                android:textAlignment="center"
                android:textSize="19dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="35">

            <Button
                android:id="@+id/btnBuscar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/buscarAluno" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:height="50dp"
            android:text="Nome do Aluno"
            android:gravity="center"
            />

        <Button
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/adicionar_modalidade"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <ListView
            android:id="@+id/listViewMatricula"
            android:layout_width="match_parent"
            android:layout_height="100dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="35">


            <TextView
                android:id="@+id/diaVencimento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="50dp"
                android:editable="false"
                android:gravity="center"
                android:text="@string/dia_de_vencimento"
                android:textAlignment="center"
                android:textSize="19dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="65">

            <EditText
                android:id="@+id/edtDia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:height="50dp"
                android:editable="true"
                android:gravity="center"
                android:text="@string/dia"
                android:textAlignment="center" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnSalvarMatricula"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/salvarMatricula"/>
    </LinearLayout>


</LinearLayout>
