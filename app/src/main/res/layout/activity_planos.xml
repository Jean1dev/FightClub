<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.GraduacaoActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnCadastrarPlanos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/colorPrimary"
        android:text="CADASTRAR PLANOS"
        android:textColor="@color/colorWhite"
        android:onClick="novoPlano"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <TextView
            android:id="@+id/textViewGraduacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modalidades:"
            android:layout_marginBottom="5dp"/>
        <Spinner
            android:id="@+id/spinnerModalidades"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnBuscarGraduacoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/colorText"
        android:text="BUSCAR GRADUAÇÕES"
        android:textColor="@color/colorWhite"
        android:onClick="buscar"/>

    <ListView
        android:id="@+id/listPlanos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp" />

</LinearLayout >